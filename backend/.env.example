# Server Configuration
PORT=8000
NODE_ENV=development

# Database (MongoDB Compass)
MONGO_URI=mongodb://localhost:27017/ai-finance
# For MongoDB with auth: mongodb://username:password@localhost:27017/ai-finance?authSource=admin
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/ai-finance

# Authentication
JWT_SECRET=your_super_secret_jwt_key_min_32_characters_long
JWT_EXPIRY=7d

# Gemini API
GEMINI_API_KEY=your_gemini_api_key_here

# Email Configuration (Gmail)
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_gmail_app_password_here

# Frontend URL for CORS
CLIENT_URL=http://localhost:5173

# ML Service URL (optional)
ML_SERVICE_URL=http://localhost:5000

# Logging
LOG_LEVEL=debug

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads
